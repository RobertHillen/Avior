@using Avior.Base.Helpers
@model Avior.Models.Coaches.CoachDetailModel

@Html.Partial("_ToolbarMasterData", new ViewDataDictionary {
    { "Title", "Coaches / Verwijderen" },
    { "isList", true },
})

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="container">
            <div class="form-group row">
                <div class="col-md-3">
                    @Resources.Coach.LabelName
                </div>
                <div class="col-md-6">
                    @Model.Details.Name
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                    @Resources.Coach.LabelPhone
                </div>
                <div class="col-md-6">
                    @Model.Details.PhoneNumber
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                    @Resources.Coach.LabelEmail
                </div>
                <div class="col-md-6">
                    @Model.Details.Email
                </div>
            </div>
            @if (Model.Details.Team != null)
            {
                <div class="form-group row">
                    <div class="col-md-3">
                        @Resources.Team.LabelTeam / @Avior.Base.Constants.Season_ID.GetDisplayName()
                    </div>
                    <div class="col-md-6">
                        @Model.Details.Team.Name
                    </div>
                </div>
            }

            <div class="form-group row">
                <div class="col-md-offset-3 col-md-6">
                    <input type="submit" value="@(Resources.General.LabelDelete)" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>

    @Html.HiddenFor(m => Model.Details.ID)
}
