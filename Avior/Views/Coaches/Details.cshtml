@using Avior.Base.Helpers
@model Avior.Models.Coaches.CoachDetailModel

@Html.Partial("_ToolbarMasterData", new ViewDataDictionary {
    { "Title", "Coaches / Details" },
    { "isList", true },
    { "isEdit", true },
    { "Id", Model.Details.ID }
})

<div class="panel panel-default">
    <div class="panel-heading avior-blue-background avior-orange">
        @Resources.Coach.LabelCoach
    </div>
    <div class="panel-body avior-blue">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    @Resources.Coach.LabelName
                </div>
                <div class="col-md-6">
                    @Model.Details.Name
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    @Resources.Coach.LabelEmail
                </div>
                <div class="col-md-6">
                    @Model.Details.Email
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    @Resources.Coach.LabelPhone
                </div>
                <div class="col-md-6">
                    @Model.Details.PhoneNumber
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading avior-blue-background avior-orange">
        @Resources.Team.LabelTeam
    </div>
    <div class="panel-body avior-blue">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    @Resources.Team.LabelName
                </div>
                <div class="col-md-6">
                    @Model.Details.Team.Name
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    @(Resources.Team.LabelSeason)
                </div>
                <div class="col-md-6">
                    @Model.Details.Team.Season.GetDisplayName()
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    @(Resources.Team.LabelTraining)
                </div>
                <div class="col-md-6">
                    @Model.Details.Team.Training1()
                    @if (!string.IsNullOrEmpty(Model.Details.Team.Training2()))
                    {
                        <text>/</text>
                        @Model.Details.Team.Training2()
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading avior-blue-background avior-orange">
        @Resources.Player.LabelPlayers
    </div>
    <div class="panel-body avior-blue">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <span class="label label-default">@Resources.Player.LabelName</span>
                </div>
                <div class="col-md-6">
                    <span class="label label-default">@Resources.Player.LabelPhone</span>
                </div>
            </div>
            @foreach (var player in Model.Details.Players)
            {
                <div class="row">
                    <div class="col-md-3">
                        @player.Name
                    </div>
                    <div class="col-md-6">
                        @player.PhoneNumber
                    </div>
                </div>
            }
        </div>
    </div>
</div>
