@model Avior.Models.Teams.TeamAddModel

@{
    var command = Model.Command;
}

<nav class="navbar-xs navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="avior-blue navbar-brand" href="#">@Resources.Team.LabelTeams / @Resources.General.LabelAdd</a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li><a href='@Url.Action("Index")'><i class="fa fa-list"></i>@Resources.General.LabelList</a></li>
            </ul>
        </div>
    </div>
</nav>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="container">
            <div class="form-group row">
                <div class="col-md-2">
                    @Resources.Team.LabelName
                </div>
                <div class="col-md-3">
                    @Html.EditorFor(m => command.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => command.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    @Resources.Team.LabelSeason
                </div>
                <div class="col-md-3">
                    @Html.EnumDropDownListFor(m => command.Season, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => command.Season, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    @Resources.Team.LabelCategory
                </div>
                <div class="col-md-3">
                    @Html.EnumDropDownListFor(m => command.Category, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => command.Category, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    @Resources.Team.LabelTraining1
                </div>
                <div class="col-md-3">
                    @Html.EnumDropDownListFor(m => command.TrainingDay1, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => command.TrainingDay1, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2">
                    @Html.EditorFor(m => command.TrainingTime1, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => command.TrainingTime1, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    @Resources.Team.LabelTraining2
                </div>
                <div class="col-md-3">
                    @Html.EnumDropDownListFor(m => command.TrainingDay2, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => command.TrainingDay2, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2">
                    @Html.EditorFor(m => command.TrainingTime2, "Selecteer een dag", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => command.TrainingTime2, "", new { @class = "text-danger" })
                </div>
            </div>

            @Html.HiddenFor(m => command.Name)
            @Html.HiddenFor(m => command.Season)
            @Html.HiddenFor(m => command.Category)
            @Html.HiddenFor(m => command.TrainingDay1)
            @Html.HiddenFor(m => command.TrainingTime1)
            @Html.HiddenFor(m => command.TrainingDay2)
            @Html.HiddenFor(m => command.TrainingTime2)

            <div class="form-group row">
                <div class="col-md-offset-2 col-md-8">
                    <input type="submit" value="@(Resources.General.LabelSave)" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
