@using Avior.Base.Helpers
@model Avior.Models.Teams.TeamDetailModel

@Html.Partial("_ToolbarMasterData", new ViewDataDictionary {
    { "Title", "Teams / Details" },
    { "isList", true },
    { "isEdit", true },
    { "Id", Model.Details.Id }
})

<div class="panel panel-default">
    <div class="panel-heading avior-blue-background avior-orange">
        @Resources.Team.LabelTeam
    </div>
    <div class="panel-body avior-blue">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    @Resources.Team.LabelName
                </div>
                <div class="col-md-6">
                    @Model.Details.Name
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    @Resources.Team.LabelSeason
                </div>
                <div class="col-md-6">
                    @Model.Details.Season.GetDisplayName()
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    @Resources.Team.LabelCategory
                </div>
                <div class="col-md-6">
                    @Model.Details.Category.GetDisplayName()
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    @Resources.Team.LabelTraining1
                </div>
                <div class="col-md-6">
                    @Model.Details.Training1()
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    @Resources.Team.LabelTraining2
                </div>
                <div class="col-md-6">
                    @Model.Details.Training2()
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading avior-blue-background avior-orange">
        @Resources.Coach.LabelCoaches
    </div>
    <div class="panel-body avior-blue">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <span class="label label-default">@Resources.Coach.LabelName</span>
                </div>
                <div class="col-md-3">
                    <span class="label label-default">@Resources.Coach.LabelEmail</span>
                </div>
                <div class="col-md-6">
                    <span class="label label-default">@Resources.Coach.LabelPhone</span>
                </div>
            </div>
            @foreach (var coach in Model.Details.Coaches)
            {
                <div class="row">
                    <div class="col-md-3">
                        @coach.Name
                    </div>
                    <div class="col-md-3">
                        @coach.Email
                    </div>
                    <div class="col-md-6">
                        @coach.PhoneNumber
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading avior-blue-background avior-orange">
        @Resources.Player.LabelPlayers
    </div>
    <div class="panel-body avior-blue">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <span class="label label-default">@Resources.Player.LabelName</span>
                </div>
                <div class="col-md-6">
                    <span class="label label-default">@Resources.Player.LabelPhone</span>
                </div>
            </div>
            @foreach (var player in Model.Details.Players)
            {
                <div class="row">
                    <div class="col-md-3">
                        @player.Name
                    </div>
                    <div class="col-md-6">
                        @player.PhoneNumber
                    </div>
                </div>
            }
        </div>
    </div>
</div>
